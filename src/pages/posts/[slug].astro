---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';
import Comments from '../../components/Comments.astro';
import { MapContainer } from '../../components/map/MapContainer';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => ({
    params: { slug: post.id.replace(/\.md$/, '') },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

// üîç ÏÑúÎ≤ÑÏÇ¨Ïù¥Îìú ÎîîÎ≤ÑÍ∑∏: raw location Îç∞Ïù¥ÌÑ∞ ÌôïÏù∏
console.log('[DEBUG] First location raw:', JSON.stringify(post.data.locations[0], null, 2));

const locations = post.data.locations.map((loc, index) => ({
  lat: loc.lat,
  lng: loc.lng,
  name: loc.name,
  order: loc.order ?? index + 1,
  note: loc.note,
  type: loc.type,
  link: loc.link,
  visitDate: loc.visitDate,
  contents: loc.contents,
  images: loc.images,
}));

const mapLocations = locations.map(l => ({
  lat: l.lat, lng: l.lng, name: l.name, order: l.order, note: l.note, type: l.type,
  link: l.link, visitDate: l.visitDate,
}));
// Ïó¨Ìñâ Í∏∞Í∞Ñ Í≥ÑÏÇ∞
const startDate = post.data.date;
const endDate = post.data.endDate || startDate;
const days = Math.ceil((endDate.getTime() - startDate.getTime()) / (1000 * 60 * 60 * 24)) + 1;
const nights = days - 1;
const durationText = nights > 0 ? `${nights}Î∞ï ${days}Ïùº` : 'ÎãπÏùºÏπòÍ∏∞';

// D-day Í≥ÑÏÇ∞
const today = new Date();
today.setHours(0, 0, 0, 0);
const dDay = Math.ceil((startDate.getTime() - today.getTime()) / (1000 * 60 * 60 * 24));
const isFuture = dDay >= 0;
const dDayText = dDay === 0 ? 'D-Day!' : `D-${dDay}`;

// visitDateÎ≥Ñ Í∑∏Î£πÌïë
const groupedByDate = locations.reduce((acc, loc) => {
  const date = loc.visitDate || 'ÎÇ†Ïßú ÎØ∏Ï†ï';
  if (!acc[date]) acc[date] = [];
  acc[date].push(loc);
  return acc;
}, {} as Record<string, typeof locations>);

const dateGroups = Object.entries(groupedByDate);
---

<BaseLayout title={post.data.title} description={post.data.excerpt}>
  <article class="post">
    <header class="post-header">
      <a href="/" class="back-link">‚Üê Î™©Î°ùÏúºÎ°ú</a>
      <div class="date-info">
        <time datetime={post.data.date.toISOString()}>
          {post.data.date.toLocaleDateString('ko-KR', { year: 'numeric', month: 'long', day: 'numeric' })}
          {post.data.endDate && post.data.endDate.getTime() !== post.data.date.getTime() 
            ? ` ~ ${post.data.endDate.toLocaleDateString('ko-KR', { month: 'long', day: 'numeric' })}` 
            : ''}
        </time>
        <span class="duration-badge">{durationText}</span>
        {isFuture && <span class="dday-badge">{dDayText}</span>}
      </div>
      <h1>{post.data.title}</h1>
      {post.data.tags && (
        <div class="tags">
          {post.data.tags.map(tag => (
            <span class="tag">#{tag}</span>
          ))}
        </div>
      )}
    </header>

    <section class="route-map">
      <h2>üó∫Ô∏è Ïó¨Ìñâ Í≤ΩÎ°ú</h2>
      <div class="map-wrapper">
        <MapContainer client:only="react" locations={mapLocations} showRoute={true} />
      </div>
    </section>

    <section class="route-details">
      <h2>üìç Î∞©Î¨∏ Ïû•ÏÜå</h2>
      {dateGroups.map(([date, locs]) => {
        return (
          <div class="date-group">
            <div class="date-header">
              <span class="date-icon">üìÖ</span>
              <span class="date-label">{date}</span>
            </div>
            {locs.map((loc) => (
              <div class="location-card" id={`location-${loc.order}`}>
                <div class="location-header">
                  <span class="location-number">{loc.order}</span>
                  <div class="location-title">
                    <h3>
                      {loc.link !== undefined ? (
                        <a href={loc.link === '' ? `https://www.google.com/maps/search/?api=1&query=${loc.lat},${loc.lng}` : loc.link} 
                           target="_blank" 
                           rel="noopener noreferrer" 
                           class="location-link">
                          {loc.name}
                          <span class="link-icon">‚Üó</span>
                        </a>
                      ) : (
                        loc.name
                      )}
              </h3>
              {loc.note && <p class="location-note">{loc.note}</p>}
            </div>
          </div>
          
          {loc.images && loc.images.length > 0 && (
            <div class="location-images">
              {loc.images.map(img => (
                <figure class="image-figure">
                  <img src={img.src} alt={img.alt || loc.name} loading="lazy" />
                  {img.caption && <figcaption>{img.caption}</figcaption>}
                </figure>
              ))}
            </div>
          )}
          
          {loc.contents && loc.contents.length > 0 && (
            <div class="location-contents">
              {loc.contents.map(content => (
                <div class="content-section">
                  {content.heading && <h4>{content.heading}</h4>}
                  <p>{content.text}</p>
                </div>
              ))}
            </div>
          )}
        </div>
      ))}
        </div>
      );
    })}
    </section>

    <section class="post-content">
      <Content />
    </section>

    <section class="comments-section">
      <h2>üí¨ ÎåìÍ∏Ä</h2>
      <Comments />
    </section>
  </article>
</BaseLayout>

<style>
  .post {
    max-width: 900px;
    margin: 0 auto;
  }

  .post-header {
    margin-bottom: 2rem;
  }

  .back-link {
    display: inline-block;
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin-bottom: 1rem;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .post-header time {
    display: block;
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  .date-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .duration-badge {
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
    padding: 0.15rem 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .dday-badge {
    background: linear-gradient(135deg, #f59e0b, #d97706);
    color: white;
    padding: 0.15rem 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 700;
    animation: pulse 2s infinite;
  }

  .dday-badge-small {
    background: #fef3c7;
    color: #d97706;
    padding: 0.1rem 0.4rem;
    border-radius: 4px;
    font-size: 0.7rem;
    font-weight: 700;
    margin-left: 0.5rem;
    vertical-align: middle;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
  }

  .date-group {
    margin-bottom: 1.5rem;
  }

  .date-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: linear-gradient(135deg, #4361ee15, #7b2cbf15);
    border-radius: 8px;
    margin-bottom: 1rem;
    border-left: 4px solid var(--color-primary);
  }

  .date-icon {
    font-size: 1.25rem;
  }

  .date-label {
    font-weight: 600;
    color: var(--color-primary);
    font-size: 1rem;
  }

  .post-header h1 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #4361ee, #7b2cbf);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.75rem;
    color: var(--color-accent);
    background: rgba(123, 44, 191, 0.1);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .route-map {
    margin-bottom: 2rem;
  }

  .route-map h2, .route-details h2 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }

  .map-wrapper {
    height: 400px;
    border-radius: 12px;
    overflow: hidden;
  }

  .route-details {
    margin-bottom: 3rem;
  }

  .location-card {
    background: var(--color-bg-secondary);
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    border: 1px solid var(--color-border);
  }

  .location-header {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .location-number {
    flex-shrink: 0;
    width: 36px;
    height: 36px;
    background: linear-gradient(135deg, #4361ee, #7b2cbf);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 14px;
  }

  .location-title h3 {
    font-size: 1.25rem;
    margin-bottom: 0.25rem;
  }

  .location-note {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin: 0;
  }

  .location-images {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .image-figure {
    margin: 0;
  }

  .image-figure img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    border-radius: 8px;
    background: #f1f5f9;
  }

  .image-figure figcaption {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    text-align: center;
    margin-top: 0.5rem;
  }

  .location-contents {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .content-section {
    background: #f8fafc;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    border-left: 3px solid var(--color-primary);
  }

  .content-section h4 {
    font-size: 0.875rem;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .content-section p {
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--color-text);
    margin: 0;
  }

  .post-content {
    line-height: 1.8;
    margin-bottom: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .post-content :global(h1),
  .post-content :global(h2),
  .post-content :global(h3) {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .post-content :global(p) { margin-bottom: 1rem; }

  .comments-section {
    border-top: 1px solid var(--color-border);
    padding-top: 2rem;
  }

  .comments-section h2 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }

  .giscus-note {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    text-align: center;
    padding: 1rem;
    background: var(--color-bg-secondary);
    border-radius: 8px;
  }

  .giscus-note a {
    color: var(--color-primary);
  }

  .location-link {
    text-decoration: none;
    color: inherit;
    transition: color 0.2s;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .location-link:hover {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .link-icon {
    font-size: 0.8em;
    opacity: 0.5;
    transition: opacity 0.2s;
  }

  .location-link:hover .link-icon {
    opacity: 1;
  }
</style>
