---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';
import { MapContainer } from '../../components/map/MapContainer';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

const locations = post.data.locations.map((loc, index) => ({
  lat: loc.lat,
  lng: loc.lng,
  name: loc.name,
  order: loc.order ?? index + 1,
  note: loc.note,
  type: loc.type,
  contents: loc.contents,
  images: loc.images,
}));

const mapLocations = locations.map(l => ({
  lat: l.lat, lng: l.lng, name: l.name, order: l.order, note: l.note, type: l.type
}));
---

<BaseLayout title={post.data.title} description={post.data.excerpt}>
  <article class="post">
    <header class="post-header">
      <a href="/commit-map/" class="back-link">‚Üê Î™©Î°ùÏúºÎ°ú</a>
      <time datetime={post.data.date.toISOString()}>
        {post.data.date.toLocaleDateString('ko-KR', { 
          year: 'numeric', 
          month: 'long', 
          day: 'numeric' 
        })}
      </time>
      <h1>{post.data.title}</h1>
      {post.data.tags && (
        <div class="tags">
          {post.data.tags.map(tag => (
            <span class="tag">#{tag}</span>
          ))}
        </div>
      )}
    </header>

    <section class="route-map">
      <h2>üó∫Ô∏è Ïó¨Ìñâ Í≤ΩÎ°ú</h2>
      <div class="map-wrapper">
        <MapContainer client:only="react" locations={mapLocations} showRoute={true} />
      </div>
    </section>

    <section class="route-details">
      <h2>üìç Î∞©Î¨∏ Ïû•ÏÜå</h2>
      {locations.map((loc) => (
        <div class="location-card" id={`location-${loc.order}`}>
          <div class="location-header">
            <span class="location-number">{loc.order}</span>
            <div class="location-title">
              <h3>{loc.name}</h3>
              {loc.note && <p class="location-note">{loc.note}</p>}
            </div>
          </div>
          
          {loc.images && loc.images.length > 0 && (
            <div class="location-images">
              {loc.images.map(img => (
                <figure class="image-figure">
                  <img src={img.src} alt={img.alt || loc.name} loading="lazy" />
                  {img.caption && <figcaption>{img.caption}</figcaption>}
                </figure>
              ))}
            </div>
          )}
          
          {loc.contents && loc.contents.length > 0 && (
            <div class="location-contents">
              {loc.contents.map(content => (
                <div class="content-section">
                  {content.heading && <h4>{content.heading}</h4>}
                  <p>{content.text}</p>
                </div>
              ))}
            </div>
          )}
        </div>
      ))}
    </section>

    <section class="post-content">
      <Content />
    </section>

    <section class="comments-section">
      <h2>üí¨ ÎåìÍ∏Ä</h2>
      <p class="giscus-note">
        ‚ö†Ô∏è ÎåìÍ∏ÄÏùÑ ÌôúÏÑ±ÌôîÌïòÎ†§Î©¥ <a href="https://giscus.app" target="_blank">Giscus</a>Î•º ÏÑ§Ï†ïÌïòÏÑ∏Ïöî.
      </p>
    </section>
  </article>
</BaseLayout>

<style>
  .post {
    max-width: 900px;
    margin: 0 auto;
  }

  .post-header {
    margin-bottom: 2rem;
  }

  .back-link {
    display: inline-block;
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin-bottom: 1rem;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .post-header time {
    display: block;
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
  }

  .post-header h1 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #4361ee, #7b2cbf);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.75rem;
    color: var(--color-accent);
    background: rgba(123, 44, 191, 0.1);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .route-map {
    margin-bottom: 2rem;
  }

  .route-map h2, .route-details h2 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }

  .map-wrapper {
    height: 400px;
    border-radius: 12px;
    overflow: hidden;
  }

  .route-details {
    margin-bottom: 3rem;
  }

  .location-card {
    background: var(--color-bg-secondary);
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    border: 1px solid var(--color-border);
  }

  .location-header {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .location-number {
    flex-shrink: 0;
    width: 36px;
    height: 36px;
    background: linear-gradient(135deg, #4361ee, #7b2cbf);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 14px;
  }

  .location-title h3 {
    font-size: 1.25rem;
    margin-bottom: 0.25rem;
  }

  .location-note {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin: 0;
  }

  .location-images {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .image-figure {
    margin: 0;
  }

  .image-figure img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    border-radius: 8px;
    background: #f1f5f9;
  }

  .image-figure figcaption {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    text-align: center;
    margin-top: 0.5rem;
  }

  .location-contents {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .content-section {
    background: #f8fafc;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    border-left: 3px solid var(--color-primary);
  }

  .content-section h4 {
    font-size: 0.875rem;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .content-section p {
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--color-text);
    margin: 0;
  }

  .post-content {
    line-height: 1.8;
    margin-bottom: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .post-content :global(h1),
  .post-content :global(h2),
  .post-content :global(h3) {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .post-content :global(p) { margin-bottom: 1rem; }

  .comments-section {
    border-top: 1px solid var(--color-border);
    padding-top: 2rem;
  }

  .comments-section h2 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }

  .giscus-note {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    text-align: center;
    padding: 1rem;
    background: var(--color-bg-secondary);
    border-radius: 8px;
  }

  .giscus-note a {
    color: var(--color-primary);
  }
</style>
