<script>
  import { MapContainer } from '../components/map/MapContainer';
  import { createRoot } from 'react-dom/client';
  import { createElement } from 'react';

  let root = null;
  let allRoutes = [];
  let activeCountries = [];

  function renderMap(routes) {
    const container = document.getElementById('map-container');
    if (!container) return;
    if (!root) {
      root = createRoot(container);
    }
    root.render(createElement(MapContainer, {
      locations: [],
      routes,
      worldView: true
    }));
  }

  function applyFilters() {
    // Filter posts (consider all associated countries, split hyphen-separated)
    const cards = document.querySelectorAll('.post-card') as NodeListOf<HTMLElement>;
    cards.forEach(card => {
      const raw = card.dataset.countries?.split(',') || [];
      const countries = raw.flatMap(c => c.split('-').map(s => s.trim()));
      const matches = activeCountries.length === 0 || activeCountries.some(ac => countries.includes(ac));
      card.style.display = matches ? 'block' : 'none';
    });

    // Filter map routes
    const filteredRoutes = activeCountries.length === 0
      ? allRoutes
      : allRoutes.filter(r => r.countries && activeCountries.some(c => r.countries.includes(c)));
    renderMap(filteredRoutes);

    // Update filter info UI
    const filterInfo = document.getElementById('filter-info')!;
    const filterLabel = document.getElementById('filter-label')!;
    if (activeCountries.length > 0) {
      filterInfo.style.display = 'flex';
      filterLabel.textContent = `ğŸŒ ${activeCountries.join(' + ')} ì—¬í–‰ë§Œ í‘œì‹œ ì¤‘`;
    } else {
      filterInfo.style.display = 'none';
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('map-container');
    if (container) {
      allRoutes = JSON.parse(container.dataset.routes || '[]');
      renderMap(allRoutes);
    }

    // Country tag click handling (max 2 selections)
    document.querySelectorAll('.country-tag').forEach(btn => {
      btn.addEventListener('click', () => {
        const country = btn.getAttribute('data-country');
        if (!country) return;
        if (country === 'all') {
          // Clear all filters
          activeCountries = [];
          document.querySelectorAll('.country-tag').forEach(b => b.classList.remove('active'));
          applyFilters();
          return;
        }
        const idx = activeCountries.indexOf(country);
        if (idx > -1) {
          activeCountries.splice(idx, 1);
        } else            // allow unlimited selections (no duplicate)
            if (!activeCountries.includes(country)) {
              activeCountries.push(country);
            }
        // toggle button active class
        btn.classList.toggle('active', activeCountries.includes(country));
        applyFilters();
      });
    });

    // Clear filter button
    const clearBtn = document.getElementById('clear-filter');
    if (clearBtn) {
      clearBtn.addEventListener('click', () => {
        activeCountries = [];
        // remove active class from all buttons
        document.querySelectorAll('.country-tag').forEach(b => b.classList.remove('active'));
        applyFilters();
      });
    }
  });
</script>

