import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { MapContainer } from '../components/map/MapContainer';

const allPosts = await getCollection('posts');
const posts = allPosts.filter(post => {
  // í”„ë¡œë•ì…˜ í™˜ê²½(import.meta.env.PROD)ì´ë©´ì„œ draftê°€ trueì¸ ê²½ìš° ì œì™¸
  if (import.meta.env.PROD && post.data.draft) return false;
  return true;
});

// ê° í¬ìŠ¤íŠ¸ë³„ ë£¨íŠ¸ ë°ì´í„° (ë‚˜ë¼ ì •ë³´ í¬í•¨)
const routes = posts.map((post, index) => ({
  slug: post.id.replace(/\.md$/, ''),
  title: post.data.title,
  date: post.data.date,
  excerpt: post.data.excerpt,
  country: (post.data.countries && post.data.countries.length > 0) ? undefined : post.data.country,
  countries: post.data.countries || [post.data.country],
  locations: post.data.locations.map((loc, locIndex) => ({
    lat: loc.lat,
    lng: loc.lng,
    name: loc.name,
    slug: post.id.replace(/\.md$/, ''),
    country: loc.country || post.data.country,
    order: loc.order ?? locIndex + 1,
    note: loc.note,
    type: loc.type,
    // Add country from location or fallback to post country if single country post
    country: loc.country || (post.data.countries?.length ? undefined : post.data.country),
  })),
}));

// ë‚ ì§œìˆœ ì •ë ¬
const sortedPosts = posts.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

// ì˜¤ëŠ˜ ë‚ ì§œ ê¸°ì¤€ìœ¼ë¡œ ê³¼ê±°/ë¯¸ë˜ ë¶„ë¥˜
const today = new Date();
today.setHours(0, 0, 0, 0);

const pastTrips = sortedPosts.filter(post => {
  const endDate = post.data.endDate || post.data.date;
  return endDate < today;
});

const futurePlans = sortedPosts.filter(post => {
  const startDate = post.data.date;
  return startDate >= today;
}).sort((a, b) => a.data.date.getTime() - b.data.date.getTime()); // ë¯¸ë˜ëŠ” ê°€ê¹Œìš´ ìˆœ

// ë‚˜ë¼ë³„ ì¹´ìš´íŠ¸
const countryCounts = posts.reduce((acc, post) => {
  // Combine primary and secondary countries, then split hyphen-separated entries
  // Prioritize countries list if available, otherwise use single country
  const targetCountries = (post.data.countries && post.data.countries.length > 0)
    ? post.data.countries
    : [post.data.country];
    
  const allCountries = targetCountries
    .filter(Boolean)
    .flatMap(c => c.split('-').map(s => s.trim()));
  allCountries.forEach(c => {
    if (c) acc[c] = (acc[c] || 0) + 1;
  });
  return acc;
}, {} as Record<string, number>);

// ì—¬í–‰ ìœ í˜• ì•„ì´ì½˜
const tripTypes: Record<string, string> = {
  sightseeing: 'ğŸ›ï¸',
  healing: 'ğŸ§˜',
  food: 'ğŸ½ï¸',
  culture: 'ğŸ­',
  nature: 'ğŸŒ²',
  adventure: 'â›°ï¸',
  shopping: 'ğŸ›ï¸',
  business: 'ğŸ’¼',
  family: 'ğŸ‘¨â€ğŸ‘©â€ğŸ‘§â€ğŸ‘¦',
  solo: 'ğŸš¶',
};
