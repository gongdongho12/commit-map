const routes = posts.map((post, index) => ({
  slug: post.id,
  country: post.data.country,
  countries: [post.data.country, ...(post.data.countries || [])].filter(Boolean),
  locations: post.data.locations.map((loc, locIndex) => ({
    lat: loc.lat,
    lng: loc.lng,
    name: loc.name,
